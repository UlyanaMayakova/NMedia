<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LikeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:checkable">true</item>
        <item name="icon">@drawable/liked_selector</item>
        <item name="iconTint">@drawable/like_checkbox_tint</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/grey</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="ShareButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_share</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/grey</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_three_dots</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>